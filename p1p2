Question 1:

#include<stdio.h>
int main()
{
	int a[10][10],trans[10][10],r,c,i,j;
	printf("enter the number of rows and columns:\n");
	scanf("%d %d",&r,&c);
	printf("enter the elements into the array:\n");
	for(i=0;i<r;i++)
	for(j=0;j<c;j++)
	{
		printf("enter element:%d %d",i+1,i+j);
		scanf("%d",&a[i][j]);
	}
	printf("entered matrix:\n");
	for(i=0;i<r;++i)
	for(j=0;j<c;++j)
	{
		printf("%d",a[i][j]);
		if(j==c-1)
		printf("\n");
	}
	for(i=0;i<r;++i)
	for(j=0;j<c;++j)
	{
		trans[j][i]=a[i][j];
	}
	printf("the matrix after inversion is:\n");
	for(i=0;i<c;++i)
	for(j=0;j<r;++j)
	{
	printf("%d",trans[i][j]);
	if(j==r-1)
	printf("\n");
	}
	return 0;
}	
